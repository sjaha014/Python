def adjacentElementsProduct(inputArray):
    largest = inputArray[0] * inputArray[1]

    for i in range(len(inputArray)-1):
        x = inputArray[i] * inputArray[i+1]
        print(x)
        if x > largest:
            largest = x
       
    return largest 



inputArray = [3,6,-2,-5,7,3]


adjacentElementsProduct(inputArray)
